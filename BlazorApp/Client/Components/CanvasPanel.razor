@inject IJSRuntime JS

<div class="canvas-dropzone"
@ondragover:preventDefault
@ondrop="HandleDrop">

    @if (CanvasControls?.Count == 0)
    {
        <p class="text-muted">Drop a control here</p>
    }
    else
    {
        @foreach (var control in CanvasControls)
        {
            <div class="p-2 mb-2 border rounded bg-white">
                <strong>@control.Label</strong> (@control.Type)
            </div>
        }
    }
</div>