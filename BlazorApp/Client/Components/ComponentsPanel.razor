<div class="components-panel">
    @foreach (var control in AvailableControls)
    {
        <div class="component-card draggable-source d-flex align-items-center mb-2 p-2 border rounded bg-white shadow-sm"
             data-control="@control.Type">
            <img src="@control.IconUrl"
                 alt="@control.Type"
                 style="width: 24px; height: 24px; margin-right: 10px;" />
            <span class="small">@control.Label</span>
        </div>
    }
</div>